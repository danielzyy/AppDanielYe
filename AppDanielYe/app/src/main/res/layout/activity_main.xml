<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/sky">
    <FrameLayout
        android:id="@+id/topFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/scoreLabel"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Score : 0"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"/>
    <ImageView
        android:id="@+id/life1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/life"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="5dp"/>
    <ImageView
        android:id="@+id/life2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/life"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="30dp"/>
    <ImageView
        android:id="@+id/life3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/life"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="55dp"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/pointCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0"
            android:textSize="220dp" />
        <TextView
            android:id="@+id/startLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drag Up and Down to Move"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"/>
        <ImageView
            android:id="@+id/bottomPipe"
            android:layout_width="wrap_content"
            android:layout_height="600dp"
            android:layout_gravity="right"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/bottompipe" />
        <ImageView
            android:id="@+id/topPipe"
            android:layout_width="wrap_content"
            android:layout_height="600dp"
            android:layout_gravity="right"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/toppipe"/>
        <ImageView
        android:id="@+id/box"
        android:layout_width="35dp"
        android:layout_height="27dp"
        android:src="@drawable/bird"
        android:scaleType="fitXY"
        android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/slowBonus"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/slow"/>
        <ImageView
            android:id="@+id/lifeBonus"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/life"/>
        <ImageView
            android:id="@+id/gapBonus"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/gap"/>
        <ImageView
            android:id="@+id/pointsBonus"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/points"/>
        <ImageView
            android:id="@+id/crash"
            android:layout_width="35dp"
            android:layout_height="27dp"
            android:src="@drawable/birdcrash"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"/>
    </FrameLayout>
</LinearLayout>